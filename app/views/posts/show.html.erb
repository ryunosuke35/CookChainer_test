<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Url:</strong>
  <%= @post.url %>
</p>

<p>
  <strong>Memo:</strong>
  <%= @post.memo %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @post.image.url if @post.image.present? %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Destroy', post_path, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', posts_path, data: {"turbolinks" => false} %>
