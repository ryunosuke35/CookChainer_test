<p id="notice"><%= notice %></p>

<h1>Tag Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tag_categories.each do |tag_category| %>
      <tr>
        <td><%= tag_category.name %></td>
        <td><%= link_to 'Show', tag_category %></td>
        <td><%= link_to 'Edit', edit_tag_category_path(tag_category) %></td>
        <td><%= link_to 'Destroy', tag_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag Category', new_tag_category_path %>
